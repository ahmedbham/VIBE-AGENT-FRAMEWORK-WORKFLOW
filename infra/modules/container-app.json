{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "7908918482251732607"
    }
  },
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the Container App"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for the Container App"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for the Container App"
      }
    },
    "containerAppsEnvironmentId": {
      "type": "string",
      "metadata": {
        "description": "Container Apps Environment ID"
      }
    },
    "containerRegistryName": {
      "type": "string",
      "metadata": {
        "description": "Container Registry Name"
      }
    },
    "containerImage": {
      "type": "string",
      "metadata": {
        "description": "Container Image"
      }
    },
    "environmentVariables": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "Environment Variables"
      }
    },
    "managedIdentity": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Enable managed identity"
      }
    },
    "cpuCores": {
      "type": "string",
      "defaultValue": "0.5",
      "metadata": {
        "description": "CPU cores"
      }
    },
    "memorySize": {
      "type": "string",
      "defaultValue": "1Gi",
      "metadata": {
        "description": "Memory size"
      }
    },
    "minReplicas": {
      "type": "int",
      "defaultValue": 0,
      "metadata": {
        "description": "Minimum replicas"
      }
    },
    "maxReplicas": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Maximum replicas"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "identity": "[if(parameters('managedIdentity'), createObject('type', 'SystemAssigned'), null())]",
      "properties": {
        "managedEnvironmentId": "[parameters('containerAppsEnvironmentId')]",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": false,
            "targetPort": 8000,
            "transport": "auto"
          },
          "registries": [
            {
              "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').loginServer]",
              "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').username]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').passwords[0].value]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "main",
              "image": "[format('{0}/{1}', reference(resourceId('Microsoft.ContainerRegistry/registries', parameters('containerRegistryName')), '2023-01-01-preview').loginServer, parameters('containerImage'))]",
              "resources": {
                "cpu": "[json(parameters('cpuCores'))]",
                "memory": "[parameters('memorySize')]"
              },
              "env": "[parameters('environmentVariables')]"
            }
          ],
          "scale": {
            "minReplicas": "[parameters('minReplicas')]",
            "maxReplicas": "[parameters('maxReplicas')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "id": {
      "type": "string",
      "value": "[resourceId('Microsoft.App/containerApps', parameters('name'))]"
    },
    "name": {
      "type": "string",
      "value": "[parameters('name')]"
    },
    "uri": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerApps', parameters('name')), '2023-05-01').configuration.ingress.fqdn]"
    },
    "identityPrincipalId": {
      "type": "string",
      "value": "[if(parameters('managedIdentity'), reference(resourceId('Microsoft.App/containerApps', parameters('name')), '2023-05-01', 'full').identity.principalId, '')]"
    }
  }
}